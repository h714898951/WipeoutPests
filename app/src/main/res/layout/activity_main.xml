<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hh.wipeoutpests.activity.MainActivity">

    <FrameLayout
        android:id="@+id/mLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/mOneFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_index_selector"
            android:checked="true"
            android:textColor="@color/checked_red_nocheked_black_color"
            android:gravity="center"
            android:textSize="@dimen/sp10"
            android:paddingTop="@dimen/dp6"
            android:text="地图" />
        <CheckBox
            android:id="@+id/mTwoFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_index_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp6"
            android:text="地图"
            android:textColor="@color/checked_red_nocheked_black_color"
            android:textSize="@dimen/sp10" />
        <CheckBox
            android:id="@+id/mThreeFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_index_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp6"
            android:text="地图"
            android:textColor="@color/checked_red_nocheked_black_color"
            android:textSize="@dimen/sp10" />
        <CheckBox
            android:id="@+id/mFourFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_index_selector"
            android:textColor="@color/checked_red_nocheked_black_color"
            android:gravity="center"
            android:textSize="@dimen/sp10"
            android:paddingTop="@dimen/dp6"
            android:text="地图"/>
    </LinearLayout>

</LinearLayout>
